<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:gravity="center"
            android:textSize="@dimen/_25sdp"
            android:fontFamily="@font/spartan_bold"/>

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/profile_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <EditText
            android:id="@+id/regs_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittextshap"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/spartan_regular"
            android:hint="Name "
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/regs_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittextshap"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/spartan_regular"
            android:hint="Email Address"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/regs_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittextshap"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/spartan_regular"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/regs_ConPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittextshap"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/spartan_regular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/btn_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign up"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/spartan_bold"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/signship"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_regular"
            android:textSize="@dimen/_16sdp"
            android:text="AlREADY Account "/>
        <TextView
            android:id="@+id/text_signip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_purple"
            android:fontFamily="@font/spartan_bold"
            android:textSize="@dimen/_16sdp"
            android:text=" Sign in"/>
    </LinearLayout>

</RelativeLayout>